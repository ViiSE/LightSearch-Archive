<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardViewSC"
    android:layout_width="match_parent"
    android:layout_height="88dp"
    android:layout_margin="4dp"
    android:layout_marginBottom="2dp"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="2dp">

    <RelativeLayout
        android:id="@+id/relativeLayoutSC"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">

        <TextView
            android:id="@+id/textViewCardNameSC"
            android:layout_width="370dp"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/textViewCardBarcodeSC"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="234dp"
            android:layout_marginTop="4dp"
            android:gravity="right"
            android:textColor="@android:color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textViewCardMaxAmountSC"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="4dp"
            android:gravity="left"
            android:textColor="@android:color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textViewCardPriceSC"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="21dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@+id/textViewCardMaxAmountSC"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/editTextCardCurrentAmountSC"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="65dp"
            android:background="@drawable/edittextshape"
            android:ems="10"
            android:gravity="center"
            android:imeOptions="flagNoExtractUi"
            android:inputType="numberSigned|number|numberDecimal"
            android:paddingRight="10dp"
            android:selectAllOnFocus="true"
            android:maxLength="7"
            android:textColor="@color/colorChange"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textViewCardTotalCostSC"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:layout_marginTop="65dp"
            android:layout_toEndOf="@+id/editTextCardCurrentAmountSC"
            android:gravity="right"
            android:textColor="@color/colorChange"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textViewAmountUnitsSC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginTop="65dp"
            android:layout_toEndOf="@+id/editTextCardCurrentAmountSC"
            android:textColor="@color/colorChange"
            android:textSize="15sp"
            android:visibility="invisible" />
    </RelativeLayout>
</android.support.v7.widget.CardView>